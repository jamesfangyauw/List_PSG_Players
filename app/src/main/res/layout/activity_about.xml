<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_myphoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/james"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_myname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/myname"
        android:textAlignment="center"
        android:textColor="#131111"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_myphoto"
        app:layout_constraintStart_toStartOf="@+id/iv_myphoto"
        app:layout_constraintTop_toBottomOf="@+id/iv_myphoto" />

    <TextView
        android:id="@+id/tv_myemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/myemail"
        android:textAlignment="center"
        android:textColor="#100C0C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_myname"
        app:layout_constraintStart_toStartOf="@+id/tv_myname"
        app:layout_constraintTop_toBottomOf="@+id/tv_myname" />
</androidx.constraintlayout.widget.ConstraintLayout>